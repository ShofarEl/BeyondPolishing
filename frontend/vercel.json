{
  "version": 2,
  "name": "beyond-polishing-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "max-age=31536000, immutable"
      }
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_NODE_ENV": "production",
    "VITE_API_URL": "https://beyondpolishing-production.up.railway.app/api"
  },
  "build": {
    "env": {
      "VITE_NODE_ENV": "production",
      "VITE_API_URL": "https://beyondpolishing-production.up.railway.app/api"
    }
  }
}